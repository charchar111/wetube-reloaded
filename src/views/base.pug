doctype html
html(lang="ko")
    head 
        link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css") 
        title #{pageTitle} | wetube
    body
        header
            if fakeUser.loggedIn 
                small Hello #{fakeUser.username}
            nav
                ul
                    li.nav-login 
                        if fakeUser.loggedIn
                            a(href="/logout") logout
                        else    
                            a(href="/login") login
                    
            h1=pageTitle
        main 
            block content
            include partials/footer.pug