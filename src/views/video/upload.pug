extends ../base



block content
    if errorMessage
        span=errorMessage
    div
        video(src="")#preview 
        button#startBtn start Recording

    form(method="POST" action="/videos/upload" enctype="multipart/form-data")
        label(for="video") Video file
        input(type="file" name="video" required id="video" accept="video/*")
        label(for="Thumb") Thumbnail file
        input(type="file" name="thumb" required id="Thumb" accept="image/*")
        
        input(name="title" placeholder="Title" required type="text" maxlength="50")
        input(name="description" placeholder="description" required type="text" minlength="20")
        input(name="hashtags" placeholder="hashtags, separated by" required type="text")
        input(type="submit", value="upload video") 
block script 
    script(src="/static/js/recorder.js") 