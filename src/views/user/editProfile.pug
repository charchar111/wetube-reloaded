extends ../base

block content 
    if errorMessage
        span=errorMessage

    img(src=`${loggedInUser.avatarUrl}` , alt="" width="100" height="100").edit-profile__avatar-box
    form(method= "POST" enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file" id="avatar" name="avatar" accept="image/*")
        input(value=`${loggedInUser.email}` type="text" name="email" placeholder="email" required)
        
        
        input(value=`${loggedInUser.username}` type="text" name="username" placeholder="username" required)
        
        input(value=`${loggedInUser.name}` type="text" name="name" placeholder="name" required)
        input(value=`${loggedInUser.location}` type="text" name="location" placeholder="location" required)
        button Update Profile
        if !loggedInUser.socialOnly 
            br
            a(href="change-password") Change Password &rarr;
         

    




